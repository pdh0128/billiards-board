// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 기본 사용자
model User {
  id           String   @id @default(cuid())
  uuid         String   @unique @default(uuid())
  username     String?  @unique
  passwordHash String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  posts    Post[]
  comments Comment[]
  votes    Vote[]

  @@index([uuid])
}

model Post {
  id        String    @id @default(cuid())
  title     String
  content   String
  userId    String
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments  Comment[]
  votes     Vote[]

  @@index([userId])
  @@index([isDeleted])
  @@index([createdAt])
}

// Path Model 기반 계층형 댓글
model Comment {
  id        String    @id @default(cuid())
  content   String
  userId    String
  postId    String
  path      String
  depth     Int       @default(0)
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([postId])
  @@index([path])
  @@index([isDeleted])
  @@index([createdAt])
}

model Vote {
  id        String    @id @default(cuid())
  value     String
  postId    String
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

// NextAuth.js 세션 관리 (선택적)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  @@index([userId])
}
